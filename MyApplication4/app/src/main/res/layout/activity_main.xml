<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.fortune.myapplication.MainActivity"
    android:background="#0f0e0e">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:text="Enter the text"
            android:id="@+id/lbl"
            android:layout_alignParentTop="true"
            android:textColor="#ffffff"
            android:textIsSelectable="false"
            android:width="@dimen/abc_action_button_min_width_material"
            android:textSize="30dp" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:id="@+id/editText"
            android:layout_below="@+id/lbl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:ems="15"
            android:hint="Text" />

        <requestFocus/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:text="DisplayToast"
            android:id="@+id/checkBox"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText"
            android:textColor="#ffffff"
            style="@style/AlertDialog.AppCompat.Light"
            android:checked="true"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="CHECK DISPLAY"
            android:id="@+id/button"
            android:layout_below="@+id/checkBox"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_marginBottom="40dp"
            android:background="#ffffff"
            android:textColor="#0b0b0b"
            android:textAlignment="center" />


    </RelativeLayout>

</RelativeLayout>
